{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug build",
      "description": "Native debug build using Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release build",
      "description": "Native release build using Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/releas",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug build",
      "description": "Native debug build using Ninja",
      "verbose": true,
      "configurePreset": "debug"
    }
  ]
}
